{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@auth/*": ["./src/app/auth/*"],
      "@core/*": ["./src/app/core/*"],
      "@home/*": ["./src/app/home/*"],
      "@planner/*": ["./src/app/planner/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
